// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

model Account {
  id                String             @id @default(cuid())
  username          String             @unique
  email             String?
  password          String
  name              String?
  avatar            String?
  roleIds           Json               @default("[]") // Using Json type
  extraPermissions  Json               @default("[]") // Using Json type
  apiToken          String?            @unique
  status            String             @default("active") // active, inactive
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  products          Product[]
  shops             Shop[]
  collectorTokens   CollectorToken[]
  translationConfig TranslationConfig?
}

model Role {
  id          String   @id @default(cuid())
  name        String
  permissions Json     @default("[]") // Using Json type
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Customer model removed in favor of Account

model SystemConfig {
  id        String   @id @default(cuid())
  name      String
  key       String   @unique
  value     String
  desc      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id                String    @id @default(cuid())
  accountId         String
  account           Account   @relation(fields: [accountId], references: [id])
  sourceUrl         String
  sourcePlatform    String
  sourceId          String?
  title             String
  titleTranslated   String?
  description       String
  descriptionImages Json?
  price             Float
  priceCurrency     String    @default("CNY")
  sellingPrice      Float?
  sellingCurrency   String?   @default("USD")
  hasVariants       Boolean   @default(false)
  variants          Json? // [{ id, price, sellingPrice, stock, attributeIdMap: { "AttrId": ["ValId1", "ValId2"] }, ... }]
  attributes        Json? // [{ id, name, values: [{id, value, image}] }]
  videos            Json?
  images            Json
  categories        Json?
  tags              Json?
  keywords          String?
  status            String    @default("draft") // draft, translated, ready, published, archived
  shopId            String?
  shop              Shop?     @relation(fields: [shopId], references: [id])
  externalId        String?
  targetLanguage    String?   @default("en")
  translatedAt      DateTime?
  publishedAt       DateTime?
  collectedAt       DateTime  @default(now())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Shop {
  id              String    @id @default(cuid())
  accountId       String
  account         Account   @relation(fields: [accountId], references: [id])
  type            String    @default("WooCommerce")
  name            String
  url             String
  apiKey          String
  apiSecret       String
  version         String?
  defaultLanguage String    @default("en")
  defaultCurrency String    @default("USD")
  isActive        Boolean   @default(true)
  products        Product[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  categories      Json? // [{ id, name, parentId }]
  tags            Json? // [{ id, name }]
}

model CollectorToken {
  id           String    @id @default(cuid())
  accountId    String
  account      Account   @relation(fields: [accountId], references: [id])
  token        String    @unique
  name         String
  lastActiveAt DateTime?
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
}

model TranslationConfig {
  id                String   @id @default(cuid())
  accountId         String   @unique
  account           Account  @relation(fields: [accountId], references: [id])
  provider          String   @default("aidge")
  appId             String?
  apiKey            String
  defaultTargetLang String   @default("en")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
